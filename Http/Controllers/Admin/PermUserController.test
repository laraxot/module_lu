<?php



namespace Modules\LU\Http\Controllers\Admin;

use App\Http\Controllers\Controller;
use Illuminate\Http\Request;
use Modules\Extend\Traits\ArtisanTrait;
use Modules\Extend\Traits\CrudSimpleTrait as CrudTrait;
//------models------
use Modules\LU\Models\PermUser;

class PermUserController extends Controller
{
    use CrudTrait;

    public function index(Request $request, $user_id)
    {
        if ($request->act=='routelist') {
            return ArtisanTrait::exe('route:list');
        }
        $tmp = new PermUser();
        $perm_user = PermUser::where('auth_user_id', $user_id)->first();
        $params = [
            'id_user' => $user_id,
            'id_permuser' => $perm_user->perm_user_id,
        ];

        return view('lu::admin.user.permuser.index')
      ->with('row', $perm_user)
      ->with('params', $params);
    }

    public function getPrimaryKey()
    {
        return 'id_permuser';
    }
}
